{
  "manifest_version": 2,
  "name": "ScholarKey",
  "version": "1.0",
  "description": "Add customizable access links for DOIs",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon_128.png"
    }
  },
  "icons": {
    "128": "icon_128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "scholarkey@firefox",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}